<%- include('headAdmin.ejs') %>
    <div id="serachResult">
        <div class="ingredient-container"
            style="margin-top: 80px;margin-left: 35px;margin-right: 10px; height: 80vh; overflow-y: scroll; width: 20vw;">
            <h3>Explore Ingredients</h3>
            <form action="/admin/explore/ingredients/result" method="get">
                <input type="hidden" name="userID" value="<%= user.userID %>">
                <% distinctIngredients.forEach(ingredient=> { %>
                    <input type="checkbox" id="<%= ingredient %>" name="ingredients" value="<%= ingredient %>">
                    <label for="<%= ingredient %>">
                        <%= ingredient %>
                    </label><br>
                    <% }) %>
                        <button type="submit">Search</button>
            </form>
        </div>

        <div class="g0" style="padding: 20px; border: 3px solid black; height: 80vh; overflow: hidden; width: 80vw; display: flex; align-items: center; flex-direction: column; justify-content: center;">
            <h1 style=" color: black; font-weight: 900; font-size: 40px; margin-bottom: 10px;">Discover delicious recipes based on your ingredients!</h1>
            <p style="color: #404F5E; font-size:20px; margin: 0;">Select the ingredients you have and let us find the perfect recipes for you!</p>
        </div>
    </div>
    <%- include('footAdmin.ejs') %>