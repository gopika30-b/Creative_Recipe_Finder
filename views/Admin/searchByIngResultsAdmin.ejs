<%- include('headAdmin.ejs') %>
  <div id="serachResult">
    <div class="ingredient-container" style="margin-top: 80px;margin-left: 35px;margin-right: 10px; height: 80vh; overflow-y: scroll; width: 20vw;">
      <h3>Explore Ingredients</h3>
      <form action="/admin/explore/ingredients/result" method="get">
          <input type="hidden" name="userID" value="<%= user.userID %>">
          <% distinctIngredients.forEach(ingredient => { %>
              <input type="checkbox" id="<%= ingredient %>" name="ingredients" value="<%= ingredient %>">
              <label for="<%= ingredient %>"><%= ingredient %></label><br>
          <% }) %>
          <button type="submit">Search</button>
      </form>
  </div>

    <div class="g0" style="padding: 20px; border: 3px solid black; height: 80vh; overflow: hidden; width: 80vw;">
      <h3>Search Results</h3>
      <div class="row" style="overflow-y: hidden;">
        <% recipesFound.forEach(recipe=> { %>
          <div class="column" >
            <div class="card" >
              <img src="<%= recipe.imageSrc %>" alt="<%= recipe.pageTitle %>" width="200px" height="200px">
              <div class="container">
                <h4>
                  <%= recipe.pageTitle %>
                </h4>
                <p class="title">
                  <% recipe.hashtags.forEach(hash=> { %>
                    <%= hash %>
                      <% }); %>
                </p>
                <p><button class="button1"
                    onclick="redirectTo('<%= recipe.rootURL %>', '<%= user.userID %>')">View</button></p>
              </div>
            </div>
          </div>
          <% }); %>
      </div>
    </div>
  </div>

  <%- include('footAdmin.ejs') %>